<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/change_username_button"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="60sp"
            android:text="Zmień swoją nazwę użytkownika"
            android:background="@drawable/button_border"
            android:textSize="20sp" />

        <Button
            android:id="@+id/change_password_button"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text="Zmień swoje hasło"
            android:background="@drawable/button_border"
            android:textSize="20sp" />

        <Button
            android:id="@+id/change_email_button"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text="Zmień email przypisany do konta"
            android:background="@drawable/button_border"
            android:textSize="20sp" />

        <Button
            android:id="@+id/change_data_button"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text="Zaaktualizuj parametry fizyczne"
            android:background="@drawable/button_border"
            android:textSize="20sp" />

        <Button
            android:id="@+id/change_avatar_button"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text="Zmień swój awatar"
            android:background="@drawable/button_border"
            android:textSize="20sp" />

        <Button
            android:id="@+id/log_out_button"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="20sp"
            android:text="Wyloguj się"
            android:textColor="@color/red"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>